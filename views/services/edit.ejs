<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Editing <%= service.name %> </h1>
  <div class="col-6 offset-3">
    <form
      action="/services/<%= service.id %>?_method=PUT"
      method="post"
      class="g-3 needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="name" class="form-label">Service Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="service[name]"
          value= '<%= service.name %>'
          required
        />
        <div class="invalid-feedback">Service must have a name</div>
       
      </div>
      <div class="mb-3">
        <label for="basePrice" class="form-label">Base Price:</label>
        <div class="input-group has-validation">
          <span class="input-group-text" id="basePrice">MMK</span>
          <input
            type="number"
            class="form-control"
            id="basePrice"
            name="service[basePrice]"
            value="<%= service.basePrice %>"
            required
          />
          <div class="invalid-feedback">
            Please state the base price for the service.
          </div>
   
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Service Description</label>
        <textarea
          class="form-control"
          name="service[description]"
          id="description"
          cols="10"
          rows="3"
          required
        ><%= service.description %> </textarea>
        <div class="invalid-feedback">
          Please provide a description of the service.
        </div>
       
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">Service Category</label>
        <select class="form-select" name="service[category]" id="category">
            <% for (let c of categories) {%>
                <option value="<%= c %>" <%= service.category === c? "selected" : "" %>><%= c %></option> 
             <%  }  %>
        </select>
      </div>
      <div class="mb-3">
        <button class="btn btn-success" type="submit">Complete Editing</button>
      </div>
    </form>
    <a class="btn btn-primary" href="/services">Cancel</a>
  </div>
</div>
